<resources>

	<style name="AppTheme" parent="Theme.AppCompat.Light">
		<item name="android:editTextStyle">@style/Widget.EditText.Red</item>
	</style>

	<style name="Widget.EditText.Red" parent="android:Widget.EditText">
		<item name="android:background">@drawable/edit_text_holo_light</item>
	</style>

	<style name="SigninButton">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:textAppearance">@android:style/TextAppearance.Large </item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="GeneralTextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
		<item name="android:layout_gravity">center_horizontal|center_vertical</item>
	</style>

	<style name="SigninFooterLL">
		<item name="android:layout_width">70dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_marginRight">3dp</item>
	</style>

	<style name="SigninFooterImageView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">90dp</item>
	</style>

	<style name="SigninFooterTextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">10dp</item>
		<item name="android:textColor">#2d2a2a</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
	</style>

</resources>
